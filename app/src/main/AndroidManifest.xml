<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="huas.fur.weifur"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application

        android:icon="@drawable/icon0"
        android:label="天气课程表"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
        </activity>
        <activity android:name=".activity.LoginActivity"></activity>
        <activity android:name=".activity.AboutActivity"></activity>
        <activity android:name=".activity.CourseActivity"></activity>
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ScoreActivity"></activity>
        <activity android:name=".activity.ScoreShowActivity"></activity>
        <activity android:name=".activity.ClassRoomActivity"></activity>
        <activity android:name=".activity.WeatherActivity"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>
